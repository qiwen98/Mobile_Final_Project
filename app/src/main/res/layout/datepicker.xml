<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textViewforSelectedDate"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:text="Please select a date"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewforSelectedDate"
        android:layout_marginTop="150dp"
        android:text="selectdate"
        android:background="@drawable/ciriclebutton" />

    <Button
        android:id="@+id/send_date_button"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:text="send"
        android:background="@drawable/ciriclebutton"/>
</RelativeLayout>