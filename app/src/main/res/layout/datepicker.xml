<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textViewforSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date Date"
        android:textSize="30sp"

        />

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_date_button"
        android:layout_below="@+id/textViewforSelectedDate"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="115dp"
        android:text="selectdate" />

    <Button
        android:id="@+id/send_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="send"
        android:background="@drawable/ciriclebutton"/>
</RelativeLayout>